<div class="main">


    <div class="vcard col-sm-3">

      <a style="display: block; position: relative;" href="https://github.com/settings/profile" class="vcard-avatar"><img src="<%= user_avatar_img %>" class="avatar" /></a>

      <h1 class="vard-names">
        <span class="vcard-fullname"><%= @person.name %></span>
        <span class="vcard-username"><%= user_username %></span>
      </h1>


      <div class="vcard-details">
        <div><span class="octicon octicon-location"></span><%= user_location %></div>
        <div><span class="octicon octicon-link"></span><a href="<%= user_link %>"><%= user_link %></a></div>
        <div><span class="octicon octicon-clock"></span><%= user_date_joined %></div>
      </div>


      <div class="vcard-stats">
        <a class="vcard-stat" href="http://github.com/<%= user_username %>/followers">
          <strong class="vcard-stat-count"><%= user_followers %></strong>
          <span class="text-muted">Followers</span>
        </a>

        <a class="vcard-stat" href="http://github.com/stars">
          <strong class="vcard-stat-count"><%= user_starred %></strong>
          <span class="text-muted">Starred</span>
        </a>

        <a class="vcard-stat" href="http://github.com/<%= user_username %>/following">
          <strong class="vcard-stat-count"><%= user_following %></strong>
          <span class="text-muted">Following</span>
        </a>
      </div>



      <div class="vcard-organizations">
        <h3 style="1.25em">Organizations</h3>
        <% user_groups.each do |g| %>
          <a class="org_avatar" href="https://github.com/<%= g[:name] %>" alt="<%= g[:name] %>"><img src="<%= g[:avatar] %>" /></a>
        <% end %>
      </div>
    </div>


    <div class="col-sm-9">
      <ul class="nav nav-tabs">
        <li><a href="#">Contributions</a></li>
        <li class="active"><a href="#">Repositories</a></li>
        <li><a href="#">Public Activity</a></li>
      </ul>

      <div id="repo-tab">
        <div class="filter-bar"
        </div>
        <% user_repositories.each do |r| %>
          <li class="repo-list-item">
            <div class="repo-stats">
              <a class="repo-list-stat-item" href=""><span class="octicon octicon-star"></span><%= r[:stars] %></a>
              <a class="repo-list-stat-item" href="#"><span class="octicon octicon-git-branch"></span><%= r[:forks] %></a>
            </div>
            <h3 class="repo-list-name"><a href="http://github.com/<%= user_username %>/<%= r[:name] %>"><%= r[:name] %></a></h3>
            <p class="repo-list-description"><%= r[:description] %></p>
            <p class="repo-list-meta"><%= r[:meta] %></p>
            <p class="repo-list-meta"><%= r[:language] %></p>
            <div class="participation-graph"></div>
          </li>
        <% end %>


      </div>
    </div>

</div>





