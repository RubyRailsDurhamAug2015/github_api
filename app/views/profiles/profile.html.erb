<%
  user_avatar_img = "https://pbs.twimg.com/profile_images/557296415261470722/_v5a2HI1.jpeg"
  user_fullname = "Mason Matthews"
  user_username = "masonfmatthews"
  user_location = "Raleigh, NC"
  user_date_joined = "Sept 20, 2010"
  user_link = "http://bernheisel.com"

  user_followers = "20"
  user_starred = "30"
  user_following = "40"

  user_groups = [
    { name: "one",
      avatar: "http://orig10.deviantart.net/ceb8/f/2013/186/f/c/free_to_use_grumpy_cat_icon_by_lost_stars_and_sins-d6c68vc.gif"},
    { name: "two",
      avatar: "http://orig10.deviantart.net/ceb8/f/2013/186/f/c/free_to_use_grumpy_cat_icon_by_lost_stars_and_sins-d6c68vc.gif"},
    { name: "three",
      avatar: "http://orig10.deviantart.net/ceb8/f/2013/186/f/c/free_to_use_grumpy_cat_icon_by_lost_stars_and_sins-d6c68vc.gif"}
  ]

%>

<nav id="gnawbar">
  <div id="gnaw-cont">

    <a class="nav-link" href="https://www.github.com">
      <span class="mega-octicon octicon-mark-github"></span>
    </a>

    <form class="">
        <input class="gnawput" placeholder="Search Cathub" type="text">
    </form>

    <ul class="nav-links">
      <li>
        <a class="nav-link" href="http://www.google.com">Pull Requests</a>
      </li>
      <li>
        <a class="nav-link" href="http://www.google.com">Issues</a>
      </li>
      <li>
        <a class="nav-link" href="http://www.google.com">Gist</a>
      </li>
    </ul>

    <a class="nav-link right" href="">
      <img class="navatar" src="http://img.uvumi.com/photos/3223/small/cat-avatar.jpg"></img>
      <span class="mega-octicon octicon-triangle-down"></span>
    </a>

    <a class="nav-link right" href="">
      <span class="mega-octicon octicon-plus"></span>
      <span class="mega-octicon octicon-triangle-down"></span>
    </a>

    <a class="nav-link right" href="http://www.google.com">
      <span class="mega-octicon octicon-bell"></span>
      <span class="mega-octicon octicon-primitive-dot"></span>
    </a>

  </div>
</nav>

<div class="main">

  <div class="container-fluid">
    <div class="column">

      <div class="vcard col-sm-3">

        <a class="vcard-avatar" href="https://github.com/settings/profile" style="display: block; position: relative;"><img class="avatar" src="<%= user_avatar_img %>"/></a>

        <h1 class="vard-names">
          <span class="vcard-fullname"><%= user_fullname %></span>
          <span class="vcard-username"><%= user_username %></span>
        </h1>

        <ul class="vcard-details">
          <li>
            <span class="octicon octicon-location"></span><%= user_location %></li>
          <li>
            <span class="octicon octicon-link"></span>
            <a href="<%= user_link %>"><%= user_link %></a>
          </li>
          <li>
            <span class="octicon octicon-clock"></span><%= user_date_joined %></li>
        </ul>

        <div class="vcard-stats">
          <a class="vcard-stat" href="http://github.com/<%= user_username %>/followers">
            <strong class="vcard-stat-count"><%= user_followers %></strong>
            <span class="text-muted">Followers</span>
          </a>

          <a class="vcard-stat" href="http://github.com/stars">
            <strong class="vcard-stat-count"><%= user_starred %></strong>
            <span class="text-muted">Starred</span>
          </a>

          <a class="vcard-stat" href="http://github.com/<%= user_username %>/following">
            <strong class="vcard-stat-count"><%= user_following %></strong>
            <span class="text-muted">Following</span>
          </a>
        </div>

        <div class="vcard-organizations">
          <h3 style="1.25em">Organizations</h3>
          <% user_groups.each do |g| %>
          <a alt="<%= g[:name] %>" class="org_avatar" href="https://github.com/<%= g[:name] %>"><img src="<%= g[:avatar] %>"/></a>
          <% end %>
        </div>
      </div>

      <div class="col-sm-9">
        <span>somethign something</span>
      </div>

    </div>
  </div>
</div>



